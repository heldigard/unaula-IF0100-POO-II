   "source": [
    "# ============================================\n",
    "# IMPLEMENTACION EN PYTHON (steps)\n",
    "# ============================================\n",
    "\n",
    "# Simulacion de Behave steps\n",
    "\n",
    "class MockBehaveContext:\n",
    "    \"\"\"Simula el context de Behave.\"\"\"\n",
    "    def __init__(self):\n",
    "        self.usuarios = {}\n",
    "        self.usuario_actual = None\n",
    "        self.mensaje = None\n",
    "        self.pagina = None\n",
    "\n",
    "# Steps\n",
    "def step_usuario_existe(context, username, password):\n",
    "    context.usuarios[username] = {'password': password}\n",
    "\n",
    "def step_intento_login(context, username, password):\n",
    "    if username not in context.usuarios:\n",
    "        context.mensaje = 'Usuario no existe'\n",
    "        context.pagina = 'login'\n",
    "        return\n",
    "    \n",
    "    if context.usuarios[username]['password'] == password:\n",
    "        context.mensaje = 'Bienvenido'\n",
    "        context.pagina = 'principal'\n",
    "        context.usuario_actual = username\n",
    "    else:\n",
    "        context.mensaje = 'Credenciales invalidas'\n",
    "        context.pagina = 'login'\n",
    "\n",
    "def step_deberia_ver_mensaje(context, mensaje):\n",
    "    assert context.mensaje == mensaje, f\"Esperado: {mensaje}, Obtenido: {context.mensaje}\"\n",
    "\n",
    "def step_deberia_estar_en_pagina(context, pagina):\n",
    "    assert context.pagina == pagina, f\"Esperado: {pagina}, Obtenido: {context.pagina}\"\n",
    "\n",
    "# Ejecutar scenario\n",
    "print('=== Ejecutando Scenario: Login exitoso ===')\n",
    "ctx = MockBehaveContext()\n",
    "\n",
    "# Given\n",
    "step_usuario_existe(ctx, 'juan', 'secreto')\n",
    "print('‚úÖ Given: Usuario existe')\n",
    "\n",
    "# When\n",
    "step_intento_login(ctx, 'juan', 'secreto')\n",
    "print('‚úÖ When: Intento login')\n",
    "\n",
    "# Then\n",
    "step_deberia_ver_mensaje(ctx, 'Bienvenido')\n",
    "print('‚úÖ Then: Mensaje correcto')\n",
    "\n",
    "step_deberia_estar_en_pagina(ctx, 'principal')\n",
    "print('‚úÖ And: Pagina correcta')\n",
    "\n",
    "print('\\nüéâ Scenario PASA!')"
