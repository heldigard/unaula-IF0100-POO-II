    "# Implementacion del ejercicio\n",
    "\n",
    "class GestorTareas:\n",
    "    def __init__(self):\n",
    "        self.usuarios = {}\n",
    "        self.tareas = {}\n",
    "        self.siguiente_id = 1\n",
    "    \n",
    "    def registrar_usuario(self, username):\n",
    "        self.usuarios[username] = {'tareas': []}\n",
    "    \n",
    "    def crear_tarea(self, username, titulo):\n",
    "        tarea_id = self.siguiente_id\n",
    "        self.siguiente_id += 1\n",
    "        \n",
    "        tarea = {\n",
    "            'id': tarea_id,\n",
    "            'titulo': titulo,\n",
    "            'estado': 'pendiente',\n",
    "            'usuario': username\n",
    "        }\n",
    "        \n",
    "        self.tareas[tarea_id] = tarea\n",
    "        self.usuarios[username]['tareas'].append(tarea_id)\n",
    "        return tarea_id\n",
    "    \n",
    "    def obtener_tarea(self, tarea_id):\n",
    "        return self.tareas.get(tarea_id)\n",
    "    \n",
    "    def completar_tarea(self, tarea_id):\n",
    "        if tarea_id in self.tareas:\n",
    "            self.tareas[tarea_id]['estado'] = 'completada'\n",
    "            return True\n",
    "        return False\n",
    "    \n",
    "    def listar_tareas_usuario(self, username):\n",
    "        if username not in self.usuarios:\n",
    "            return []\n",
    "        tarea_ids = self.usuarios[username]['tareas']\n",
    "        return [self.tareas[tid] for tid in tarea_ids]\n",
    "\n",
    "# Steps para los tests\n",
    "class TareaContext:\n",
    "    def __init__(self):\n",
    "        self.gestor = GestorTareas()\n",
    "        self.usuario_actual = None\n",
    "        self.tarea_actual = None\n",
    "\n",
