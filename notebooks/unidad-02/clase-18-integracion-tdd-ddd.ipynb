    "# ============================================\n",
    "# TESTS TDD\n",
    "# ============================================\n",
    "\n",
    "def test_producto_reservar_stock():\n",
    "    # Arrange\n",
    "    producto = Producto(1, 'Laptop', Dinero(1000), 5)\n",
    "    \n",
    "    # Act\n",
    "    producto.reservar_stock(2)\n",
    "    \n",
    "    # Assert\n",
    "    assert producto.stock == 3\n",
    "    print('âœ… test_producto_reservar_stock PASA')\n",
    "\n",
    "def test_producto_reservar_sin_stock():\n",
    "    producto = Producto(1, 'Laptop', Dinero(1000), 1)\n",
    "    \n",
    "    try:\n",
    "        producto.reservar_stock(5)\n",
",
    "        assert False, 'Deberia lanzar ValueError'\n",
    "    except ValueError:\n",
    "        print('âœ… test_producto_reservar_sin_stock PASA')\n",
    "\n",
    "def test_pedido_agregar_item():\n",
    "    # Arrange\n",
    "    pedido = Pedido(1, 100)\n",
    "    producto = Producto(1, 'Laptop', Dinero(1000), 5)\n",
    "    \n",
    "    # Act\n",
    "    pedido.agregar_item(producto, 2)\n",
    "    \n",
    "    # Assert\n",
    "    assert len(pedido.items) == 1\n",
    "    assert pedido.total.monto == 2000\n",
    "    print('âœ… test_pedido_agregar_item PASA')\n",
    "\n",
    "def test_pedido_confirmar():\n",
    "    pedido = Pedido(1, 100)\n",
    "    producto = Producto(1, 'Laptop', Dinero(1000), 5)\n",
    "    pedido.agregar_item(producto, 2)\n",
    "    \n",
    "    pedido.confirmar()\n",
    "    \n",
    "    assert pedido.estado == EstadoPedido.CONFIRMADO\n",
    "    print('âœ… test_pedido_confirmar PASA')\n",
    "\n",
    "def test_pedido_confirmar_sin_items():\n",
    "    pedido = Pedido(1, 100)\n",
    "    \n",
    "    try:\n",
    "        pedido.confirmar()\n",
    "        assert False, 'Deberia lanzar ValueError'\n",
    "    except ValueError:\n",
    "        print('âœ… test_pedido_confirmar_sin_items PASA')\n",
    "\n",
    "# Ejecutar todos los tests\n",
    "print('=== Ejecutando Tests TDD ===')\n",
    "test_producto_reservar_stock()\n",
    "test_producto_reservar_sin_stock()\n",
    "test_pedido_agregar_item()\n",
    "test_pedido_confirmar()\n",
    "test_pedido_confirmar_sin_items()\n",
    "print('\\nðŸŽ‰ Todos los tests pasan!')"
   ]
