   "source": [
    "# ============================================\n",
    "# MODELO DDD - Dominio de Pedidos\n",
    "# ============================================\n",
    "\n",
    "from dataclasses import dataclass, field\n",
    "from datetime import datetime\n",
    "from typing import List\n",
    "from enum import Enum\n",
    "\n",
    "class EstadoPedido(Enum):\n",
    "    CREADO = 'creado'\n",
    "    CONFIRMADO = 'confirmado'\n",
    "    ENVIADO = 'enviado'\n",
    "    ENTREGADO = 'entregado'\n",
    "    CANCELADO = 'cancelado'\n",
    "\n",
    "@dataclass(frozen=True)\n",
    "class Dinero:\n",
    "    monto: float\n",
    "    moneda: str = 'USD'\n",
    "    \n",
    "    def __add__(self, otro: 'Dinero') -> 'Dinero':\n",
    "        return Dinero(self.monto + otro.monto, self.moneda)\n",
    "    \n",
    "    def __mul__(self, cantidad: int) -> 'Dinero':\n",
    "        return Dinero(self.monto * cantidad, self.moneda)\n",
    "\n",
    "class Producto:\n",
    "    \"\"\"Entidad Producto.\"\"\"\n",
    "    \n",
    "    def __init__(self, id: int, nombre: str, precio: Dinero, stock: int):\n",
    "        self._id = id\n",
    "        self._nombre = nombre\n",
    "        self._precio = precio\n",
    "        self._stock = stock\n",
    "    \n",
    "    @property\n",
    "    def id(self):\n",
    "        return self._id\n",
    "    \n",
    "    @property\n",
    "    def nombre(self):\n",
    "        return self._nombre\n",
    "    \n",
    "    @property\n",
    "    def precio(self):\n",
    "        return self._precio\n",
    "    \n",
    "    @property\n",
    "    def stock(self):\n",
    "        return self._stock\n",
    "    \n",
    "    def reservar_stock(self, cantidad: int):\n",
    "        if cantidad > self._stock:\n",
    "            raise ValueError(f'Stock insuficiente: {self._stock} < {cantidad}')\n",
    "        self._stock -= cantidad\n",
    "\n",
    "@dataclass\n",
    "class ItemPedido:\n",
    "    \"\"\"Value Object para items.\"\"\"\n",
    "    producto_id: int\n",
    "    nombre: str\n",
    "    cantidad: int\n",
    "    precio_unitario: Dinero\n",
    "    \n",
    "    @property\n",
    "    def subtotal(self) -> Dinero:\n",
    "        return self.precio_unitario * self.cantidad\n",
    "\n",
    "class Pedido:\n",
    "    \"\"\"Raiz de agregado Pedido.\"\"\"\n",
    "    \n",
    "    def __init__(self, id: int, cliente_id: int):\n",
    "        self._id = id\n",
    "        self._cliente_id = cliente_id\n",
    "        self._items: List[ItemPedido] = []\n",
    "        self._estado = EstadoPedido.CREADO\n",
    "        self._fecha_creacion = datetime.now()\n",
    "    \n",
    "    def agregar_item(self, producto: Producto, cantidad: int):\n",
    "        if self._estado != EstadoPedido.CREADO:\n",
    "            raise ValueError('No se puede modificar un pedido confirmado')\n",
    "        \n",
    "        item = ItemPedido(\n",
    "            producto_id=producto.id,\n",
    "            nombre=producto.nombre,\n",
    "            cantidad=cantidad,\n",
    "            precio_unitario=producto.precio\n",
    "        )\n",
    "        self._items.append(item)\n",
    "    \n",
    "    def confirmar(self):\n",
    "        if not self._items:\n",
    "            raise ValueError('El pedido no tiene items')\n",
    "        self._estado = EstadoPedido.CONFIRMADO\n",
    "    \n",
    "    @property\n",
    "    def total(self) -> Dinero:\n",
    "        total = Dinero(0)\n",
    "        for item in self._items:\n",
    "            total = total + item.subtotal\n",
    "        return total\n",
    "    \n",
    "    @property\n",
    "    def estado(self) -> EstadoPedido:\n",
    "        return self._estado\n",
    "    \n",
    "    @property\n",
    "    def items(self) -> List[ItemPedido]:\n",
    "        return self._items.copy()\n",
    "\n",
    "print('âœ… Modelo DDD implementado')"
   ]
