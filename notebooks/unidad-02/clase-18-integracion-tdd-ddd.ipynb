   "source": [
    "# ============================================\n",
    "# CASO DE USO: Crear Pedido\n",
    "# ============================================\n",
    "\n",
    "class ServicioPedido:\n",
    "    \"\"\"Servicio de aplicacion para gestionar pedidos.\"\"\"\n",
    "    \n",
    "    def __init__(self, repo_productos, repo_pedidos):\n",
    "        self._repo_productos = repo_productos\n",
    "        self._repo_pedidos = repo_pedidos\n",
    "        self._siguiente_id_pedido = 1\n",
    "    \n",
    "    def crear_pedido(self, cliente_id: int) -> Pedido:\n",
    "        \"\"\"Crea un nuevo pedido vacio.\"\"\"\n",
    "        pedido = Pedido(self._siguiente_id_pedido, cliente_id)\n",
    "        self._siguiente_id_pedido += 1\n",
    "        self._repo_pedidos.guardar(pedido)\n",
    "        return pedido\n",
    "    \n",
    "    def agregar_item_a_pedido(self, pedido_id: int, producto_id: int, cantidad: int):\n",
    "        \"\"\"Agrega un item al pedido y reserva stock.\"\"\"\n",
    "        pedido = self._repo_pedidos.buscar_por_id(pedido_id)\n",
    "        if not pedido:\n",
    "            raise ValueError('Pedido no encontrado')\n",
    "        \n",
    "        producto = self._repo_productos.buscar_por_id(producto_id)\n",
    "        if not producto:\n",
    "            raise ValueError('Producto no encontrado')\n",
    "        \n",
    "        # Reservar stock primero\n",
    "        producto.reservar_stock(cantidad)\n",
    "        \n",
    "        # Agregar al pedido\n",
    "        pedido.agregar_item(producto, cantidad)\n",
    "    \n",
    "    def confirmar_pedido(self, pedido_id: int):\n",
    "        \"\"\"Confirma el pedido.\"\"\"\n",
    "        pedido = self._repo_pedidos.buscar_por_id(pedido_id)\n",
    "        if not pedido:\n",
    "            raise ValueError('Pedido no encontrado')\n",
    "        \n",
    "        pedido.confirmar()\n",
    "\n",
    "class RepositorioEnMemoria:\n",
    "    \"\"\"Repositorio generico en memoria.\"\"\"\n",
    "    \n",
    "    def __init__(self):\n",
    "        self._datos = {}\n",
    "    \n",
    "    def guardar(self, entidad):\n",
    "        self._datos[entidad._id] = entidad\n",
    "    \n",
    "    def buscar_por_id(self, id):\n",
    "        return self._datos.get(id)\n",
    "\n",
    "# Demostracion del caso de uso completo\n",
    "print('=== Demo: Caso de Uso Crear Pedido ===')\n",
    "\n",
    "# Setup\n",
    "repo_productos = RepositorioEnMemoria()\n",
    "repo_pedidos = RepositorioEnMemoria()\n",
    "servicio = ServicioPedido(repo_productos, repo_pedidos)\n",
    "\n",
    "# Given: Producto existe\n",
    "producto = Producto(1, 'Laptop', Dinero(1000), 5)\n",
    "repo_productos.guardar(producto)\n",
    "print(f'âœ… Producto creado: {producto.nombre} (Stock: {producto.stock})')\n",
    "\n",
    "# When: Crear pedido y agregar items\n",
    "pedido = servicio.crear_pedido(cliente_id=100)\n",
    "print(f'âœ… Pedido creado: #{pedido._id}')\n",
    "\n",
    "servicio.agregar_item_a_pedido(pedido._id, producto.id, 2)\n",
    "print(f'âœ… Items agregados: {len(pedido.items)}')\n",
    "print(f'âœ… Total: {pedido.total.monto}')\n",
    "print(f'âœ… Stock restante: {producto.stock}')\n",
    "\n",
    "servicio.confirmar_pedido(pedido._id)\n",
    "print(f'âœ… Pedido confirmado: {pedido.estado.value}')\n",
    "\n",
    "print('\\nðŸŽ‰ Caso de uso completado exitosamente!')"
   ]
