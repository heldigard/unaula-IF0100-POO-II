  {"cell_type":"code","execution_count":null,"id":"cell-12","metadata":{},"outputs":[],"source":["# Ejemplo: Step definitions para registro de usuarios\n","\n","from behave import given, when, then\n","from dataclasses import dataclass\n","from typing import Optional\n","\n","# Modelo de usuario\n","@dataclass\nclass Usuario:\n","    id: Optional[int] = None\n","    username: str = \"\"\n","    email: str = \"\"\n","    activo: bool = True\n","\n","# Repositorio en memoria\n","class UsuarioRepository:\n","    def __init__(self):\n","        self._usuarios = []\n","        self._next_id = 1\n","    \n","    def buscar_por_username(self, username: str):\n","        for u in self._usuarios:\n","            if u.username == username:\n","                return u\n","        return None\n","    \n","    def guardar(self, usuario: Usuario):\n","        if usuario.id is None:\n","            usuario.id = self._next_id\n","            self._next_id += 1\n","        self._usuarios.append(usuario)\n","    \n","    def limpiar(self):\n","        self._usuarios.clear()\n","        self._next_id = 1\n","\n","# Instancia global del repositorio\n","repo = UsuarioRepository()\n","\n","# --- GIVEN STEPS (Dado) ---\n","\n","@given('el sistema no tiene un usuario con username \"{username}\"')\n","def step_no_existe_usuario(context, username):\n","    \"\"\"Given: El sistema no tiene el usuario.\"\"\"\n","    usuario = repo.buscar_por_username(username)\n","    if usuario:\n","        repo._usuarios.remove(usuario)\n","\n","@given('el sistema tiene un usuario con username \"{username}\"')\n","def step_existe_usuario(context, username):\n","    \"\"\"Given: El sistema tiene el usuario.\"\"\"\n","    usuario = Usuario(username=username, email=f\"{username}@example.com\")\n","    repo.guardar(usuario)\n","\n","@given('el sistema tiene un usuario con username \"{username}\" y password \"{password}\"')\n","def step_existe_usuario_con_password(context, username, password):\n","    \"\"\"Given: El sistema tiene el usuario con password.\"\"\"\n","    # En un sistema real, el password estarÃ­a hasheado\n","    usuario = Usuario(username=username, email=f\"{username}@example.com\")\n","    usuario.password = password  # Solo para demo\n","    repo.guardar(usuario)\n","\n","# --- WHEN STEPS (Cuando) ---\n","\n","@when('registro un nuevo usuario con username \"{username}\" y email \"{email}\"')\n","def step_registro_usuario(context, username, email):\n","    \"\"\"When: Registro un nuevo usuario.\"\"\"\n","    context.nuevo_usuario = Usuario(username=username, email=email)\n","    try:\n","        repo.guardar(context.nuevo_usuario)\n","        context.error = None\n","    except Exception as e:\n","        context.error = e\n","\n","@when('ingreso username \"{username}\"')\n","def step_ingreso_username(context, username):\n","    \"\"\"When: Ingreso el username.\"\"\"\n","    context.login_username = username\n","\n","@when('ingreso password \"{password}\"')\n","def step_ingreso_password(context, password):\n","    \"\"\"When: Ingreso el password.\"\"\"\n","    context.login_password = password\n","\n","# --- THEN STEPS (Entonces) ---\n","\n","@then('el usuario deberÃ­a ser creado exitosamente')\n","def step_usuario_creado(context):\n","    \"\"\"Then: El usuario fue creado.\"\"\"\n","    assert context.nuevo_usuario.id is not None\n","    assert context.error is None\n","\n","@then('el usuario deberÃ­a tener ID asignado')\n","def step_usuario_con_id(context):\n","    \"\"\"Then: El usuario tiene ID.\"\"\"\n","    assert context.nuevo_usuario.id > 0\n","\n","@then('el usuario deberÃ­a estar activo')\n","def step_usuario_activo(context):\n","    \"\"\"Then: El usuario estÃ¡ activo.\"\"\"\n","    assert context.nuevo_usuario.activo is True\n","\n","@then('el registro deberÃ­a fallar con error \"{mensaje}\"')\n","def step_registro_falla(context, mensaje):\n","    \"\"\"Then: El registro fallÃ³ con error.\"\"\"\n","    assert context.error is not None\n","    assert mensaje.lower() in str(context.error).lower()\n","\n","print(\"\\nâœ… Step definitions definidas correctamente\")"]},
