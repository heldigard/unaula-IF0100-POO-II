  {"cell_type":"code","execution_count":null,"id":"cell-17","metadata":{},"outputs":[],"source":["# SoluciÃ³n completa de step definitions\n","\n","from behave import given, when, then\n","from dataclasses import dataclass\n","from typing import Optional\n","\n","@dataclass\nclass LoginPage:\n","    \"\"\"Modelo de la pÃ¡gina de login.\"\"\"\n","    username: str = \"\"\n","    password: str = \"\"\n","    mensaje: str = \"\"\n","    url: str = \"/login\"\n","    autenticado: bool = False\n","\n","class AuthService:\n","    def __init__(self):\n","        self.usuarios = {}\n","    \n","    def registrar(self, username, email, password):\n","        self.usuarios[username] = (email, password)\n","    \n","    def autenticar(self, username, password):\n","        if username in self.usuarios:\n","            _, stored_password = self.usuarios[username]\n","            return stored_password == password\n","        return False\n","\n","auth_service = AuthService()\n","\n","# GIVEN\n","@given('el sistema tiene un usuario con username \"{username}\" y password \"{password}\"')\n","def step_usuario_registrado(context, username, password):\n","    auth_service.registrar(username, f\"{username}@example.com\", password)\n","    context.page = LoginPage()\n","\n","# WHEN\n","@when('ingreso username \"{username}\"')\n","def step_ingresar_username(context, username):\n","    context.page.username = username\n","\n","@when('ingreso password \"{password}\"')\n","def step_ingresar_password(context, password):\n","    context.page.password = password\n","\n","@when('hago clic en \"{boton}\"')\n","def step_click_boton(context, boton):\n","    if boton == \"Iniciar SesiÃ³n\":\n","        if auth_service.autenticar(context.page.username, context.page.password):\n","            context.page.autenticado = True\n","            context.page.mensaje = \"Bienvenido\"\n","            context.page.url = \"/dashboard\"\n","        else:\n","            context.page.mensaje = \"Credenciales invÃ¡lidas\"\n","            context.page.url = \"/login\"\n","\n","# THEN\n","@then('deberÃ­a ver \"{mensaje}\"')\n","def step_ver_mensaje(context, mensaje):\n","    assert mensaje in context.page.mensaje\n","\n","@then('deberÃ­a ser redirigido a \"{url}\"')\n","def step_redirigido(context, url):\n","    assert context.page.url == url\n","\n","@then('deberÃ­a permanecer en \"{url}\"')\n","def step_permanecer(context, url):\n","    assert context.page.url == url\n","\n","print(\"\\nâœ… Step definitions completas implementadas\")"]},
